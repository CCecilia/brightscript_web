doctype html
html(lang='en')
    head
        meta(charset='utf-8')
        link(rel='apple-touch-icon', sizes='76x76', href='/admin/img/apple-icon.png')
        link(rel='icon', type='image/png', href='/favicon.ico')
        meta(http-equiv='X-UA-Compatible', content='IE=edge,chrome=1')
        title BrS Tuts Admin
        meta(content='width=device-width, initial-scale=1.0, maximum-scale=1.0, user-scalable=0, shrink-to-fit=no', name='viewport')
        //- Fonts and icons
        link(href='https://fonts.googleapis.com/css?family=Montserrat:400,700,200', rel='stylesheet') 
        link(rel='stylesheet', href='https://maxcdn.bootstrapcdn.com/font-awesome/latest/css/font-awesome.min.css') 
        //- CSS Files
        link(href='/admin/css/bootstrap.min.css', rel='stylesheet') 
        link(rel='stylesheet', type='text/css', href='https://cdn.datatables.net/v/bs4/dt-1.10.16/datatables.min.css') 
        link(href='/admin/css/light-bootstrap-dashboard.css?v=2.0.1', rel='stylesheet') 
    body
        .wrapper
            .sidebar(data-image='/admin/img/sidebar-5.jpg')
                .sidebar-wrapper
                    .logo
                        a.simple-text(href='/')
                            | BrightScript Tuts
                    ul.nav
                        li.nav-item(class=('Dashboard'===location ? 'active' : ''))
                            a.nav-link(href='/admin/dashboard/')
                                i.nc-icon.nc-chart-pie-35
                                p Dashboard
                        li.nav-item(class=('Tutorials'===location ? 'active' : ''))
                            a.nav-link(href='/admin/tutorials/')
                                i.nc-icon.nc-notes
                                p Tutorials
                        li.nav-item(class=('Categories'===location ? 'active' : ''))
                            a.nav-link(href='/admin/categories/')
                                i.nc-icon.nc-vector
                                p Categories
                        li.nav-item(class=('References'===location ? 'active' : ''))
                            a.nav-link(href='/admin/references/')
                                i.nc-icon.nc-preferences-circle-rotate
                                p References
                        li.nav-item(class=('Users'===location ? 'active' : ''))
                            a.nav-link(href='/admin/users/')
                                i.nc-icon.nc-circle-09
                                p Users
            .main-panel
                //- Navbar
                nav.navbar.navbar-expand-lg(color-on-scroll='500')
                    .container-fluid
                        a.navbar-brand(href='#pablo')  #{location} 
                        button.navbar-toggler.navbar-toggler-right(href='', type='button', data-toggle='collapse', aria-controls='navigation-index', aria-expanded='false', aria-label='Toggle navigation')
                            span.navbar-toggler-bar.burger-lines
                            span.navbar-toggler-bar.burger-lines
                            span.navbar-toggler-bar.burger-lines
                        #navigation.collapse.navbar-collapse.justify-content-end
                            ul.nav.navbar-nav.mr-auto
                                li.nav-item
                                    a.nav-link(href='#', data-toggle='dropdown')
                                        span.d-lg-none #{location}
                                li.nav-item.dropdown
                                    a#navbarDropdownMenuLink.nav-link.dropdown-toggle(data-toggle='dropdown', aria-expanded='false')
                                        i.fa.fa-cog
                                    .dropdown-menu(aria-labelledby='navbarDropdownMenuLink')
                                        a.dropdown-item(href='#') #{user.email}
                                        a.dropdown-item(href='#') Log Out
                //- End Navbar
                block content
                
                footer.footer
                    .container
                        nav
                            ul.footer-menu
                                li
                                    a(href='#')
                                        | Home
                                li
                                    a(href='#')
                                        | Company
                                li
                                    a(href='#')
                                        | Portfolio
                                li
                                    a(href='#')
                                        | Blog
                            p.copyright.text-center
                                | Â©
                                script.
                                    document.write(new Date().getFullYear())
                                a.roku-font(href='') Christian Cecilia
    //- Core JS Files
    script(src='/admin/js/core/jquery.3.2.1.min.js', type='text/javascript')
    script(src='/admin/js/core/popper.min.js', type='text/javascript')
    script(src='/admin/js/core/bootstrap.min.js', type='text/javascript')
    //- Plugin for Switches, full documentation here: http://www.jque.re/plugins/version3/bootstrap.switch/
    script(src='/admin/js/plugins/bootstrap-switch.js')
    //- Google Maps Plugin
    //- script(type='text/javascript', src='https://maps.googleapis.com/maps/api/js?key=YOUR_KEY_HERE')
    //- Chartist Plugin
    script(src='/admin/js/plugins/chartist.min.js')
    //- Notifications Plugin
    script(src='/admin/js/plugins/bootstrap-notify.js')
    //- Datatables Plugin
    script(type='text/javascript', src='https://cdn.datatables.net/v/bs4/dt-1.10.16/datatables.min.js')
    //- Light Bootstrap Dashboard
    script(src='/admin/js/light-bootstrap-dashboard.js?v=2.0.1', type='text/javascript')
    //- Global 
    script(src='/admin/js/global.js', type='text/javascript')
