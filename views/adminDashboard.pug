extends adminlayout

block content
    .content
        .container-fluid
            .row
                .col-md-4
                    .card
                        .card-header
                            h4.card-title Email Statistics
                            p.card-category Last Campaign Performance
                        .card-body
                            #chartPreferences.ct-chart.ct-perfect-fourth
                        .card-footer
                            .legend
                                i.fa.fa-circle.text-info
                                |  Open
                                i.fa.fa-circle.text-danger
                                |  Bounce
                                i.fa.fa-circle.text-warning
                                |  Unsubscribe
                            hr
                            .stats
                                i.fa.fa-clock-o
                                |  Campaign sent 2 days ago
                .col-md-8
                    .card
                        .card-header
                            h4.card-title Users Behavior
                            p.card-category 24 Hours performance
                        .card-body
                            #chartHours.ct-chart
                        .card-footer
                            .legend
                                i.fa.fa-circle.text-info
                                |  Open
                                i.fa.fa-circle.text-danger
                                |  Click
                                i.fa.fa-circle.text-warning
                                |  Click Second Time
                            hr
                            .stats
                                i.fa.fa-history
                                |  Updated 3 minutes ago
            .row
                .col-md-6
                    .card
                        .card-header
                            h4.card-title 2017 Sales
                            p.card-category All products including Taxes
                        .card-body
                            #chartActivity.ct-chart
                        .card-footer
                            .legend
                                i.fa.fa-circle.text-info
                                |  Tesla Model S
                                i.fa.fa-circle.text-danger
                                |  BMW 5 Series
                            hr
                            .stats
                                i.fa.fa-check
                                |  Data information certified
                .col-md-6
                    .card.card-tasks
                        .card-header
                            h4.card-title Tasks
                            p.card-category Backend development
                        .card-body
                            .table-full-width
                                table.table
                                    tbody
                                        tr
                                            td
                                                .form-check
